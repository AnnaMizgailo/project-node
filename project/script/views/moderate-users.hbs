<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список пользователей</title>
</head>
<body>
    {{#each users}}
    {{#with .}}
        <div class="container {{id}}">
            <img src={{image}}>
            <p>{{login}}</p>
            <p>{{role}}</p>
        </div>
    {{/with}}
    {{/each}}
</body>
</html>