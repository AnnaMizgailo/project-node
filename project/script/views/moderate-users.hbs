<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список пользователей</title>
    <link rel="stylesheet" href="../css/index_moderate_users.css">
    <script defer src="../js/index.js"></script>
</head>
<body>
    <div class="cont">
    {{#each users}}
        {{#with .}}
            <div class="container">
                {{#if image}}
                    <img src="../uploads/{{image}}">
                {{/if}}
                {{#unless image}}
                    <img src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_1280.png">
                {{/unless}}
                <p>{{login}}</p>
                <p>{{role}}</p>
                <button onclick="deleteUser({{id}})">Удалить пользователя</button>
                {{#if banned}}
                    <button onclick="unbanUser({{id}})">Разблокировать пользователя</button>
                {{/if}}
                {{#unless banned}}
                    <button onclick="banUser({{id}})">Заблокировать пользователя</button>
                {{/unless}}
                
            </div>
        {{/with}}
    {{/each}}
    </div>
</body>
</html>